<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/gradient_main_background"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/netFlowHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/gradient_white"
            android:fontFamily="@font/andada"
            android:text="@string/net_flow"
            android:paddingHorizontal="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/amountLayout"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/netFlowTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_trending_up"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:textSize="28sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeMaxTextSize="28sp"
                app:autoSizeStepGranularity="2sp">
            </TextView>

            <LinearLayout
                android:id="@+id/negativeAndPositive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netFlowPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="clip_vertical"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/netFlowNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawablePadding="10dp"
                    android:paddingBottom="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeFrameLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/amountLayout"
            app:layout_constraintBottom_toTopOf="@id/logCountText">

            <Spinner
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/time_frame_desc"
                android:gravity="start|center"
                android:background="@drawable/btn_time_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/trendingUpTimeFrame"
                android:background="@drawable/ic_arrow_drop_down"
                android:layout_gravity="end"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/addLogHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:orientation="horizontal"
            android:background="@drawable/gradient_log_menu">
            <TextView
                android:id="@+id/logAverage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:gravity="start|bottom"
                android:paddingBottom="4dp"
                android:paddingHorizontal="10dp"
                android:maxLines="1"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeStepGranularity="2sp"
                />
            <TextView
                android:id="@+id/logCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp"
                android:layout_weight="0"
                android:maxLines="1"
                android:gravity="end|top"
                android:paddingBottom="4dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainLogsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_log_menu2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.0"
        android:paddingBottom="60dp"
        android:clipToPadding="false">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/addLogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/btn_add_log"
        android:drawableStart="@drawable/ic_arrow_upward"
        android:drawableEnd="@drawable/ic_arrow_upward"
        android:fontFamily="sans-serif-black"
        android:text="@string/add_log"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/addLogScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primaryText"
        app:layout_constraintBottom_toBottomOf="@id/mainActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addLogButton"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/addLogFade1"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:background="@drawable/gradient_add_log_background1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/addLogFade2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="@id/addLogFade1"
            android:background="@drawable/gradient_add_log_background"/>

        <EditText
            android:id="@+id/addLogInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/input_money"
            android:drawableStart="@drawable/custom_ic_money"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/enter_amount"
            android:inputType="numberDecimal"
            android:nextFocusDown="@id/addPurposeInput"
            android:padding="8dp"
            android:textCursorDrawable="@color/primaryText"
            app:layout_constraintEnd_toEndOf="@+id/addPurposeInput"
            app:layout_constraintStart_toStartOf="@id/addPurposeInput"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="@string/enter_amount" />

        <EditText
            android:id="@+id/addPurposeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_money"
            android:drawableStart="@drawable/custom_ic_description"
            android:layout_marginHorizontal="32dp"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/note_optional"
            android:inputType="textCapSentences"
            android:padding="8dp"
            android:shadowColor="@color/primaryText"
            android:textCursorDrawable="@color/primaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addLogInput"
            android:imeOptions="actionDone"
            android:autofillHints="@string/note_optional" />

        <Button
            android:id="@+id/buttonLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_loss_gain"
            android:drawableStart="@drawable/ic_trending_down"
            android:drawableEnd="@drawable/ic_trending_down"
            android:drawablePadding="5dp"
            android:text="@string/loss"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center_vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@id/addPurposeInput"
            app:layout_constraintTop_toBottomOf="@id/buttonGain"/>

        <Button
            android:id="@+id/buttonGain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_loss_gain"
            android:drawableStart="@drawable/ic_trending_up"
            android:drawableEnd="@drawable/ic_trending_up"
            android:drawablePadding="5dp"
            android:text="@string/gain"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center_vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@id/addPurposeInput"
            app:layout_constraintTop_toBottomOf="@id/addPurposeInput"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_loss_gain"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="5dp"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/addPurposeInput"
            app:layout_constraintTop_toTopOf="@+id/buttonLoss" />

        <Button
            android:id="@+id/duplicateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_loss_gain"
            android:drawableStart="@drawable/ic_duplicate"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="@string/duplicate"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/buttonGain"
            app:layout_constraintStart_toStartOf="@id/addPurposeInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_below_add_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>